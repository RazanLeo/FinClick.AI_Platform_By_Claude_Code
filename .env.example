# FinClick.AI Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# Application Settings
# ================================
NODE_ENV=production
PORT=3000
BASE_URL=https://finclick.ai

# Admin Account (for initial setup - exactly as specified in the prompt)
ADMIN_EMAIL=Razan@FinClick.AI
ADMIN_PASSWORD=RazanFinClickAI@056300

# Guest Account (shared account for demos and testing)
GUEST_EMAIL=Guest@FinClick.AI
GUEST_PASSWORD=GuestFinClickAI@123321

# ================================
# Database Configuration (Supabase)
# ================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ================================
# Authentication & Security
# ================================
# Generate a strong JWT secret (use: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-here
ENCRYPTION_KEY=your-32-character-encryption-key

# ================================
# AI Services
# ================================
# OpenAI API for document analysis and insights
OPENAI_API_KEY=sk-your-openai-api-key

# Google Gemini API for additional AI analysis
GEMINI_API_KEY=your-gemini-api-key

# ================================
# Financial Data Providers
# ================================
# Financial Modeling Prep API for market data
FINANCIAL_MODELING_PREP_API_KEY=your-fmp-api-key
FMP_API_KEY=your-financial-modeling-prep-api-key

# Alpha Vantage API for stock data
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# Investing.com API
INVESTING_COM_API_KEY=your-investing-com-api-key

# World Bank API (usually no key required)
WORLD_BANK_API_URL=https://api.worldbank.org/v2

# ================================
# Subscription Pricing (As specified in prompt)
# ================================
MONTHLY_SUBSCRIPTION_PRICE=5000
YEARLY_SUBSCRIPTION_PRICE=60000
YEARLY_DISCOUNT_PERCENTAGE=10
YEARLY_DISCOUNTED_PRICE=54000

# ================================
# Payment Processing (PayTabs)
# ================================
# Get these from your PayTabs merchant dashboard
PAYTABS_PROFILE_ID=your-paytabs-profile-id
PAYTABS_SERVER_KEY=your-paytabs-server-key
PAYTABS_BASE_URL=https://secure-global.paytabs.com

# PayTabs Configuration
PAYTABS_CURRENCY=SAR
PAYTABS_CALLBACK_URL=https://finclick.ai/api/payment/callback
PAYTABS_RETURN_URL=https://finclick.ai/dashboard

# ================================
# Email Configuration
# ================================
# For sending notifications and reports
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=finclick.ai@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=FinClick.AI <noreply@finclick.ai>

# ================================
# File Storage
# ================================
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=52428800
# Allowed file types for upload
ALLOWED_FILE_TYPES=.pdf,.xlsx,.xls,.csv,.jpg,.png,.jpeg,.docx,.doc

# Upload directories
UPLOAD_DIR=./uploads
REPORTS_DIR=./reports
CHARTS_DIR=./charts
LOGS_DIR=./logs

# ================================
# Redis Configuration (Optional)
# ================================
# For caching and session storage
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================
# Monitoring & Logging
# ================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info
LOG_DIR=./logs

# Grafana Admin Password
GRAFANA_PASSWORD=admin

# ================================
# Backup Configuration
# ================================
# Backup schedule (cron format: 0 2 * * * = daily at 2 AM)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ================================
# Application Features
# ================================
# Enable/disable specific features
ENABLE_AI_ANALYSIS=true
ENABLE_EXTERNAL_DATA=true
ENABLE_PDF_REPORTS=true
ENABLE_EXCEL_REPORTS=true
ENABLE_WORD_REPORTS=true
ENABLE_POWERPOINT_REPORTS=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# Development Settings
# ================================
# Only needed for development/testing
DEBUG=false
VERBOSE_LOGS=false
MOCK_EXTERNAL_APIS=false

# Testing database (if different from main)
TEST_SUPABASE_URL=https://your-test-project.supabase.co
TEST_SUPABASE_ANON_KEY=your-test-anon-key
TEST_SUPABASE_SERVICE_ROLE_KEY=your-test-service-key

# ================================
# SSL Configuration (Production)
# ================================
# SSL certificate paths (if using custom SSL)
SSL_CERT_PATH=/etc/ssl/certs/finclick.crt
SSL_KEY_PATH=/etc/ssl/private/finclick.key

# ================================
# Database Migration Settings
# ================================
# Auto-run migrations on startup (use with caution in production)
AUTO_MIGRATE=false
AUTO_SEED=false

# ================================
# Performance Settings
# ================================
# Number of worker processes
WORKER_PROCESSES=1

# Memory limits
NODE_OPTIONS=--max_old_space_size=2048

# Request timeout (in milliseconds)
REQUEST_TIMEOUT=30000

# ================================
# Security Headers
# ================================
# CORS settings
CORS_ORIGIN=https://finclick.ai
CORS_CREDENTIALS=true

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: https:

# ================================
# Localization
# ================================
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en
RTL_LANGUAGES=ar

# ================================
# Analytics (Optional)
# ================================
# Google Analytics tracking ID
GA_TRACKING_ID=GA-XXXXXXXXX

# ================================
# Notification Settings
# ================================
# Webhook URLs for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# ================================
# Maintenance Mode
# ================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE_AR=الموقع تحت الصيانة، يرجى المحاولة لاحقاً
MAINTENANCE_MESSAGE_EN=Site under maintenance, please try again later