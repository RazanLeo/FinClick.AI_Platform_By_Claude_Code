# FinClick.AI - Environment Variables Template for Vercel
# Copy this file to .env.local for development or configure in Vercel dashboard
# =================================================================

# Application Environment
NODE_ENV=production
PORT=3000
VERCEL=1

# =================================================================
# DATABASE - Supabase Configuration
# =================================================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Alternative naming for compatibility
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =================================================================
# AUTHENTICATION & SECURITY
# =================================================================
JWT_SECRET=your_jwt_secret_here
LEGACY_JWT_SECRET=your_legacy_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# =================================================================
# AI SERVICES
# =================================================================
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# =================================================================
# FINANCIAL DATA SERVICES
# =================================================================
FINANCIAL_MODELING_PREP_API_KEY=your_fmp_api_key_here
FMP_API_KEY=your_fmp_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# =================================================================
# PAYMENT SERVICES (PayTabs) - Currently Disabled
# =================================================================
# PAYTABS_PROFILE_ID=your_profile_id_when_ready
# PAYTABS_SERVER_KEY=your_server_key_when_ready
# PAYTABS_CLIENT_KEY=your_client_key_when_ready
# PAYTABS_REGION=SAU

# Temporary Payment Bypass for Development
PAYMENT_ENABLED=false
DEMO_MODE=true

# =================================================================
# EMAIL SERVICES (Optional)
# =================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=finclick.ai@gmail.com
# SMTP_PASS=your_app_password
# EMAIL_FROM=finclick.ai@gmail.com

# =================================================================
# LOGGING & MONITORING
# =================================================================
LOG_LEVEL=info
ENABLE_LOGGING=true

# =================================================================
# RATE LIMITING
# =================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================================================
# CORS SETTINGS
# =================================================================
ALLOWED_ORIGINS=https://your-vercel-domain.vercel.app,https://finclick.ai

# =================================================================
# APPLICATION SETTINGS
# =================================================================
APP_NAME=FinClick.AI
APP_VERSION=1.0.0
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en

# =================================================================
# FEATURE FLAGS
# =================================================================
ENABLE_AI_ANALYSIS=true
ENABLE_ADVANCED_REPORTS=true
ENABLE_API_ACCESS=true
ENABLE_DEMO_ACCOUNTS=true

# =================================================================
# CACHE SETTINGS
# =================================================================
CACHE_TTL=3600
ENABLE_REDIS=false

# =================================================================
# FILE UPLOAD SETTINGS
# =================================================================
MAX_FILE_SIZE=50mb
ALLOWED_FILE_TYPES=pdf,xlsx,xls,csv,jpg,png

# =================================================================
# COMPANY INFORMATION
# =================================================================
COMPANY_NAME=FinClick.AI
COMPANY_EMAIL=finclick.ai@gmail.com
COMPANY_PHONE=00966544827213
COMPANY_WEBSITE=https://finclick.ai

# =================================================================
# SUBSCRIPTION PRICING (SAR)
# =================================================================
MONTHLY_PRICE=5000
ANNUAL_PRICE=54000
ANNUAL_DISCOUNT=10
CURRENCY=SAR

# =================================================================
# End of Configuration
# =================================================================