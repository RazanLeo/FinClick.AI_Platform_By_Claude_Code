                <div class="mb-4 flex space-x-1 <%= language === 'ar' ? 'space-x-reverse' : '' %>">
                    <i class="fas fa-star text-yellow-400"></i>
                    <i class="fas fa-star text-yellow-400"></i>
                    <i class="fas fa-star text-yellow-400"></i>
                    <i class="fas fa-star text-yellow-400"></i>
