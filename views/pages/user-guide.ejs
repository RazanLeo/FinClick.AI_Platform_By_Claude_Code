<%- include('../layouts/main') %>

<div class="min-h-screen bg-gradient-to-br from-black via-gray-900 to-black py-12">
    <div class="container mx-auto px-4 max-w-4xl">
        <!-- Header -->
        <div class="text-center mb-8">
            <img src="/images/logo.png" alt="FinClick.AI Logo" class="h-16 w-auto mx-auto mb-4">
            <h1 class="text-3xl font-bold text-gold mb-4">
                <%= language === 'ar' ? 'كتيّب استخدام منصة FinClick.AI' : 'FinClick.AI Platform User Guide' %>
            </h1>
            <p class="text-gold/70">
                <%= language === 'ar' ? 'الدليل الشامل للاستخدام الأمثل' : 'Complete guide for optimal usage' %>
            </p>
        </div>

        <!-- Content -->
        <div class="bg-gray-900/50 backdrop-blur-sm border border-gold/20 rounded-xl p-8">
            <div class="prose prose-gold max-w-none" dir="<%= language === 'ar' ? 'rtl' : 'ltr' %>">

                <% if (language === 'ar') { %>
                <!-- Arabic Content -->
                <div class="space-y-8">
                    <!-- البداية السريعة -->
                    <section>
                        <div class="flex items-start space-x-4 space-x-reverse mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">1</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">البداية السريعة:</h2>
                                <p class="text-gold/80">سجل حسابك، اختر خطة الاشتراك المناسبة، أكمل ملف الشركة بالمعلومات المطلوبة (القطاع، النشاط، الكيان القانوني)، ثم ابدأ رحلتك مع التحليل المالي الذكي.</p>
                            </div>
                        </div>
                    </section>

                    <!-- رفع الملفات -->
                    <section>
                        <div class="flex items-start space-x-4 space-x-reverse mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">2</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">رفع الملفات:</h2>
                                <p class="text-gold/80">ادعم ملفات Excel، PDF، Word، والصور. تأكد من وضوح البيانات وصحة الأرقام. النظام يتعرف تلقائياً على القوائم المالية ويستخرج البيانات.</p>
                            </div>
                        </div>
                    </section>

                    <!-- اختيار نوع التحليل -->
                    <section>
                        <div class="flex items-start space-x-4 space-x-reverse mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">3</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">اختيار نوع التحليل:</h2>
                                <p class="text-gold/80">180 نوع تحليل مختلف: كلاسيكي (نسب السيولة، الربحية)، متوسط (التحليل الاتجاهي)، ومتقدم (نماذج التقييم، إدارة المخاطر). اختر حسب احتياجك.</p>
                            </div>
                        </div>
                    </section>

                    <!-- فهم النتائج -->
                    <section>
                        <div class="flex items-start space-x-4 space-x-reverse mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">4</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">فهم النتائج:</h2>
                                <p class="text-gold/80">كل تحليل يحتوي على: النتيجة الرقمية، التفسير المفصل، المقارنات القطاعية، التوصيات العملية، ونقاط القوة والضعف مع خطط التحسين.</p>
                            </div>
                        </div>
                    </section>

                    <!-- التقارير والتصدير -->
                    <section>
                        <div class="flex items-start space-x-4 space-x-reverse mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">5</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">التقارير والتصدير:</h2>
                                <p class="text-gold/80">صدر تحليلك بصيغ PDF، Word، Excel، أو PowerPoint. التقارير شاملة ومصممة للعرض على الإدارة العليا والمستثمرين.</p>
                            </div>
                        </div>
                    </section>

                    <!-- الوكلاء الذكية -->
                    <section>
                        <div class="flex items-start space-x-4 space-x-reverse mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">6</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">الوكلاء الذكية:</h2>
                                <p class="text-gold/80">استخدم وكلاء الذكاء الاصطناعي المتخصصة: محلل الاستثمار، خبير المخاطر، مستشار الاستراتيجية، محلل القطاعات، خبير التقييم، ومحلل السيولة.</p>
                            </div>
                        </div>
                    </section>

                    <!-- الأدوات المجانية -->
                    <section>
                        <div class="flex items-start space-x-4 space-x-reverse mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">7</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">الأدوات المجانية:</h2>
                                <p class="text-gold/80">استفد من الحاسبات المالية، التقويم الاقتصادي، بوت GPT للاستشارات السريعة، وأدوات تحليل الأسهم المجانية المتاحة للجميع.</p>
                            </div>
                        </div>
                    </section>

                    <!-- الدعم الفني -->
                    <section>
                        <div class="flex items-start space-x-4 space-x-reverse mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">8</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">الدعم الفني:</h2>
                                <p class="text-gold/80">فريق الدعم متاح 24/7 عبر support@finclick.ai أو الدردشة المباشرة. متوسط وقت الاستجابة أقل من 30 دقيقة.</p>
                            </div>
                        </div>
                    </section>
                </div>

                <% } else { %>
                <!-- English Content -->
                <div class="space-y-8">
                    <!-- Quick Start -->
                    <section>
                        <div class="flex items-start space-x-4 mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">1</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">Quick Start:</h2>
                                <p class="text-gold/80">Register your account, choose the appropriate subscription plan, complete company profile with required information (sector, activity, legal entity), then start your intelligent financial analysis journey.</p>
                            </div>
                        </div>
                    </section>

                    <!-- File Upload -->
                    <section>
                        <div class="flex items-start space-x-4 mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">2</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">File Upload:</h2>
                                <p class="text-gold/80">Support Excel, PDF, Word, and image files. Ensure data clarity and number accuracy. The system automatically recognizes financial statements and extracts data.</p>
                            </div>
                        </div>
                    </section>

                    <!-- Analysis Type Selection -->
                    <section>
                        <div class="flex items-start space-x-4 mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">3</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">Analysis Type Selection:</h2>
                                <p class="text-gold/80">180 different analysis types: Classical (liquidity, profitability ratios), Intermediate (trend analysis), and Advanced (valuation models, risk management). Choose according to your needs.</p>
                            </div>
                        </div>
                    </section>

                    <!-- Understanding Results -->
                    <section>
                        <div class="flex items-start space-x-4 mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">4</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">Understanding Results:</h2>
                                <p class="text-gold/80">Each analysis contains: numerical result, detailed interpretation, sector comparisons, practical recommendations, strengths and weaknesses with improvement plans.</p>
                            </div>
                        </div>
                    </section>

                    <!-- Reports and Export -->
                    <section>
                        <div class="flex items-start space-x-4 mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">5</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">Reports and Export:</h2>
                                <p class="text-gold/80">Export your analysis in PDF, Word, Excel, or PowerPoint formats. Reports are comprehensive and designed for presentation to senior management and investors.</p>
                            </div>
                        </div>
                    </section>

                    <!-- AI Agents -->
                    <section>
                        <div class="flex items-start space-x-4 mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">6</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">AI Agents:</h2>
                                <p class="text-gold/80">Use specialized AI agents: Investment Analyst, Risk Expert, Strategy Consultant, Sector Analyst, Valuation Expert, and Liquidity Analyst.</p>
                            </div>
                        </div>
                    </section>

                    <!-- Free Tools -->
                    <section>
                        <div class="flex items-start space-x-4 mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">7</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">Free Tools:</h2>
                                <p class="text-gold/80">Benefit from financial calculators, economic calendar, GPT bot for quick consultations, and free stock analysis tools available to everyone.</p>
                            </div>
                        </div>
                    </section>

                    <!-- Technical Support -->
                    <section>
                        <div class="flex items-start space-x-4 mb-4">
                            <div class="w-8 h-8 bg-gold text-black rounded-full flex items-center justify-center text-sm font-bold mt-1">8</div>
                            <div>
                                <h2 class="text-xl font-bold text-gold mb-2">Technical Support:</h2>
                                <p class="text-gold/80">Support team available 24/7 via support@finclick.ai or live chat. Average response time less than 30 minutes.</p>
                            </div>
                        </div>
                    </section>
                </div>
                <% } %>

            </div>

            <!-- Navigation -->
            <div class="flex justify-between items-center mt-8 pt-6 border-t border-gold/20">
                <a href="/" class="flex items-center text-gold hover:text-yellow-400 transition-colors">
                    <i class="fas fa-arrow-left mr-2 <%= language === 'ar' ? 'transform rotate-180 ml-2 mr-0' : '' %>"></i>
                    <%= language === 'ar' ? 'العودة للصفحة الرئيسية' : 'Back to Home' %>
                </a>
                <div class="flex space-x-4 <%= language === 'ar' ? 'space-x-reverse' : '' %>">
                    <a href="/payment-policy" class="text-gold hover:text-yellow-400">
                        <%= language === 'ar' ? 'سياسة الدفع' : 'Payment Policy' %>
                    </a>
                    <span class="text-gold/40">|</span>
                    <a href="/contact" class="text-gold hover:text-yellow-400">
                        <%= language === 'ar' ? 'اتصل بنا' : 'Contact Us' %>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>