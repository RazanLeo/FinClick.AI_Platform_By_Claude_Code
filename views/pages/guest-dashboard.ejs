<!DOCTYPE html>
<html lang="<%= language %>" dir="<%= language === 'ar' ? 'rtl' : 'ltr' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= language === 'ar' ? 'لوحة الضيوف' : 'Guest Dashboard' %> - FinClick.AI</title>

    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="icon" href="/images/logo.png" type="image/png">

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="guest-body bg-black text-gold">
    <!-- Guest Navigation -->
    <nav class="guest-nav bg-black border-b border-gold/20">
        <div class="nav-container flex justify-between items-center p-4">
            <div class="nav-brand flex items-center">
                <img src="/images/logo.png" alt="FinClick.AI" class="w-10 h-10">
                <span class="nav-brand-text text-gold text-xl font-bold mr-3">FinClick.AI</span>
                <span class="guest-badge text-xs bg-gold/20 text-gold px-2 py-1 rounded">
                    <%= language === 'ar' ? 'ضيف' : 'Guest' %>
                </span>
            </div>

            <div class="nav-menu flex space-x-6" dir="ltr">
                <a href="/guest/dashboard" class="nav-item active text-gold hover:text-secondary-gold">
                    <i class="icon-dashboard"></i>
                    <%= language === 'ar' ? 'الرئيسية' : 'Dashboard' %>
                </a>
                <a href="/guest/demo" class="nav-item text-gold hover:text-secondary-gold">
                    <i class="icon-play"></i>
                    <%= language === 'ar' ? 'تجربة تفاعلية' : 'Demo' %>
                </a>
                <a href="/guest/examples" class="nav-item text-gold hover:text-secondary-gold">
                    <i class="icon-eye"></i>
                    <%= language === 'ar' ? 'أمثلة' : 'Examples' %>
                </a>
                <a href="/pricing" class="nav-item text-gold hover:text-secondary-gold">
                    <i class="icon-credit-card"></i>
                    <%= language === 'ar' ? 'الأسعار' : 'Pricing' %>
                </a>
            </div>

            <div class="nav-user flex items-center space-x-4">
                <div class="language-switcher">
                    <a href="?lang=en" class="<%= language === 'en' ? 'text-secondary-gold' : 'text-gold/70' %>">EN</a>
                    <span class="text-gold/40">|</span>
                    <a href="?lang=ar" class="<%= language === 'ar' ? 'text-secondary-gold' : 'text-gold/70' %>">عربي</a>
                </div>

                <div class="auth-buttons">
                    <a href="/login" class="btn btn-outline text-gold border-gold">
                        <%= language === 'ar' ? 'تسجيل دخول' : 'Login' %>
                    </a>
                    <a href="/register" class="btn btn-primary bg-gold text-black">
                        <%= language === 'ar' ? 'تسجيل جديد' : 'Register' %>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="guest-main min-h-screen bg-black">
        <!-- Welcome Header -->
        <div class="welcome-header bg-gradient-to-r from-black via-gold/10 to-black p-8 text-center">
            <div class="max-w-4xl mx-auto">
                <h1 class="text-4xl font-bold text-gold mb-4">
                    <%= language === 'ar' ? 'مرحباً بك في FinClick.AI' : 'Welcome to FinClick.AI' %>
                </h1>
                <p class="text-xl text-gold/80 mb-6">
                    <%= language === 'ar' ? 'منصة التحليل المالي الذكي الثورية مع 180 نوع تحليل مالي' : 'Revolutionary AI Financial Analysis Platform with 180 Financial Analysis Types' %>
                </p>
                <div class="cta-buttons">
                    <a href="/register" class="btn btn-primary bg-gold text-black mr-4 px-8 py-3 text-lg">
                        <%= language === 'ar' ? 'ابدأ مجاناً' : 'Start Free' %>
                    </a>
                    <a href="#demo" class="btn btn-outline text-gold border-gold px-8 py-3 text-lg">
                        <%= language === 'ar' ? 'شاهد العرض التوضيحي' : 'Watch Demo' %>
                    </a>
                </div>
            </div>
        </div>

        <!-- Guest Features -->
        <div class="guest-features p-8">
            <div class="max-w-6xl mx-auto">
                <h2 class="text-3xl font-bold text-gold text-center mb-8">
                    <%= language === 'ar' ? 'ما يمكنك فعله كضيف' : 'What You Can Do as a Guest' %>
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Interactive Demo -->
                    <div class="feature-card bg-gradient-to-br from-gold/5 to-gold/10 border border-gold/20 rounded-lg p-6 text-center">
                        <div class="feature-icon text-4xl text-gold mb-4">
                            <i class="icon-play-circle"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gold mb-3">
                            <%= language === 'ar' ? 'تجربة تفاعلية' : 'Interactive Demo' %>
                        </h3>
                        <p class="text-gold/70 mb-4">
                            <%= language === 'ar' ? 'جرب منصة التحليل المالي مع بيانات تجريبية' : 'Try the financial analysis platform with sample data' %>
                        </p>
                        <a href="/guest/demo" class="btn btn-outline text-gold border-gold">
                            <%= language === 'ar' ? 'ابدأ التجربة' : 'Start Demo' %>
                        </a>
                    </div>

                    <!-- View Examples -->
                    <div class="feature-card bg-gradient-to-br from-gold/5 to-gold/10 border border-gold/20 rounded-lg p-6 text-center">
                        <div class="feature-icon text-4xl text-gold mb-4">
                            <i class="icon-eye"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gold mb-3">
                            <%= language === 'ar' ? 'عرض الأمثلة' : 'View Examples' %>
                        </h3>
                        <p class="text-gold/70 mb-4">
                            <%= language === 'ar' ? 'شاهد أمثلة حقيقية للتحليلات المالية والتقارير' : 'See real examples of financial analyses and reports' %>
                        </p>
                        <a href="/guest/examples" class="btn btn-outline text-gold border-gold">
                            <%= language === 'ar' ? 'شاهد الأمثلة' : 'View Examples' %>
                        </a>
                    </div>

                    <!-- Free Tools -->
                    <div class="feature-card bg-gradient-to-br from-gold/5 to-gold/10 border border-gold/20 rounded-lg p-6 text-center">
                        <div class="feature-icon text-4xl text-gold mb-4">
                            <i class="icon-tool"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gold mb-3">
                            <%= language === 'ar' ? 'أدوات مجانية' : 'Free Tools' %>
                        </h3>
                        <p class="text-gold/70 mb-4">
                            <%= language === 'ar' ? 'استخدم الحاسبات المالية والتقويم الاقتصادي' : 'Use financial calculators and economic calendar' %>
                        </p>
                        <a href="#free-tools" class="btn btn-outline text-gold border-gold">
                            <%= language === 'ar' ? 'استخدم الأدوات' : 'Use Tools' %>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- 180 Analysis Types Preview -->
        <div class="analysis-preview p-8 bg-gradient-to-b from-black to-gold/5">
            <div class="max-w-6xl mx-auto">
                <h2 class="text-3xl font-bold text-gold text-center mb-8">
                    <%= language === 'ar' ? '180 نوع تحليل مالي' : '180 Financial Analysis Types' %>
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    <!-- Classical Foundational -->
                    <div class="analysis-category bg-gradient-to-br from-gold/10 to-gold/5 border border-gold/20 rounded-lg p-6">
                        <h3 class="text-xl font-bold text-gold mb-4">
                            <%= language === 'ar' ? 'الأساسية التقليدية' : 'Classical Foundational' %>
                        </h3>
                        <div class="category-stats text-center mb-4">
                            <span class="text-3xl font-bold text-gold">106</span>
                            <p class="text-gold/70"><%= language === 'ar' ? 'تحليل' : 'Analyses' %></p>
                        </div>
                        <ul class="text-gold/70 space-y-2 text-sm">
                            <li>• <%= language === 'ar' ? 'نسب السيولة' : 'Liquidity Ratios' %></li>
                            <li>• <%= language === 'ar' ? 'نسب الربحية' : 'Profitability Ratios' %></li>
                            <li>• <%= language === 'ar' ? 'نسب الرافعة المالية' : 'Leverage Ratios' %></li>
                            <li>• <%= language === 'ar' ? 'نسب النشاط' : 'Activity Ratios' %></li>
                            <li>• <%= language === 'ar' ? 'نسب السوق' : 'Market Ratios' %></li>
                        </ul>
                    </div>

                    <!-- Applied Intermediate -->
                    <div class="analysis-category bg-gradient-to-br from-gold/10 to-gold/5 border border-gold/20 rounded-lg p-6">
                        <h3 class="text-xl font-bold text-gold mb-4">
                            <%= language === 'ar' ? 'التطبيقية المتوسطة' : 'Applied Intermediate' %>
                        </h3>
                        <div class="category-stats text-center mb-4">
                            <span class="text-3xl font-bold text-gold">21</span>
                            <p class="text-gold/70"><%= language === 'ar' ? 'تحليل' : 'Analyses' %></p>
                        </div>
                        <ul class="text-gold/70 space-y-2 text-sm">
                            <li>• <%= language === 'ar' ? 'التحليل الديناميكي' : 'Dynamic Analysis' %></li>
                            <li>• <%= language === 'ar' ? 'التحليل القطاعي' : 'Sectoral Analysis' %></li>
                            <li>• <%= language === 'ar' ? 'تحليل الحساسية' : 'Sensitivity Analysis' %></li>
                            <li>• <%= language === 'ar' ? 'التحليل المقارن' : 'Comparative Analysis' %></li>
                        </ul>
                    </div>

                    <!-- Advanced -->
                    <div class="analysis-category bg-gradient-to-br from-gold/10 to-gold/5 border border-gold/20 rounded-lg p-6">
                        <h3 class="text-xl font-bold text-gold mb-4">
                            <%= language === 'ar' ? 'المتقدمة' : 'Advanced' %>
                        </h3>
                        <div class="category-stats text-center mb-4">
                            <span class="text-3xl font-bold text-gold">53</span>
                            <p class="text-gold/70"><%= language === 'ar' ? 'تحليل' : 'Analyses' %></p>
                        </div>
                        <ul class="text-gold/70 space-y-2 text-sm">
                            <li>• <%= language === 'ar' ? 'النمذجة المالية' : 'Financial Modeling' %></li>
                            <li>• <%= language === 'ar' ? 'تحليل المخاطر' : 'Risk Analysis' %></li>
                            <li>• <%= language === 'ar' ? 'التقييم المتقدم' : 'Advanced Valuation' %></li>
                            <li>• <%= language === 'ar' ? 'الذكاء الاصطناعي' : 'AI-Powered Analysis' %></li>
                        </ul>
                    </div>
                </div>

                <div class="text-center">
                    <a href="/register" class="btn btn-primary bg-gold text-black px-8 py-3 text-lg">
                        <%= language === 'ar' ? 'ابدأ الآن واحصل على الوصول الكامل' : 'Start Now & Get Full Access' %>
                    </a>
                </div>
            </div>
        </div>

        <!-- Demo Video Section -->
        <div id="demo" class="demo-section p-8">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl font-bold text-gold mb-8">
                    <%= language === 'ar' ? 'شاهد FinClick.AI في العمل' : 'See FinClick.AI in Action' %>
                </h2>

                <div class="demo-video bg-gradient-to-br from-gold/10 to-gold/5 border border-gold/20 rounded-lg p-8">
                    <div class="video-placeholder bg-black/50 rounded-lg p-16 mb-6">
                        <div class="play-button text-6xl text-gold mb-4">
                            <i class="icon-play"></i>
                        </div>
                        <h3 class="text-xl text-gold mb-2">
                            <%= language === 'ar' ? 'عرض توضيحي تفاعلي' : 'Interactive Demo' %>
                        </h3>
                        <p class="text-gold/70">
                            <%= language === 'ar' ? 'اكتشف كيف يمكن لـ FinClick.AI تحويل تحليلك المالي' : 'Discover how FinClick.AI can transform your financial analysis' %>
                        </p>
                    </div>

                    <div class="demo-features grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                        <div class="feature text-gold/70">
                            <i class="icon-upload text-gold mr-2"></i>
                            <%= language === 'ar' ? 'رفع الوثائق' : 'Upload Documents' %>
                        </div>
                        <div class="feature text-gold/70">
                            <i class="icon-settings text-gold mr-2"></i>
                            <%= language === 'ar' ? 'اختيار التحليلات' : 'Select Analyses' %>
                        </div>
                        <div class="feature text-gold/70">
                            <i class="icon-download text-gold mr-2"></i>
                            <%= language === 'ar' ? 'تنزيل التقارير' : 'Download Reports' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Free Tools Section -->
        <div id="free-tools" class="free-tools-section p-8 bg-gradient-to-b from-gold/5 to-black">
            <div class="max-w-6xl mx-auto">
                <h2 class="text-3xl font-bold text-gold text-center mb-8">
                    <%= language === 'ar' ? 'أدوات مالية مجانية' : 'Free Financial Tools' %>
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    <!-- Financial Calculator -->
                    <div class="tool-card bg-gradient-to-br from-gold/10 to-gold/5 border border-gold/20 rounded-lg p-6 text-center">
                        <div class="tool-icon text-3xl text-gold mb-4">
                            <i class="icon-calculator"></i>
                        </div>
                        <h3 class="text-lg font-bold text-gold mb-2">
                            <%= language === 'ar' ? 'الحاسبة المالية' : 'Financial Calculator' %>
                        </h3>
                        <p class="text-gold/70 text-sm mb-4">
                            <%= language === 'ar' ? 'احسب النسب المالية الأساسية' : 'Calculate basic financial ratios' %>
                        </p>
                        <button onclick="openCalculator()" class="btn btn-sm btn-outline text-gold border-gold">
                            <%= language === 'ar' ? 'استخدم' : 'Use' %>
                        </button>
                    </div>

                    <!-- Economic Calendar -->
                    <div class="tool-card bg-gradient-to-br from-gold/10 to-gold/5 border border-gold/20 rounded-lg p-6 text-center">
                        <div class="tool-icon text-3xl text-gold mb-4">
                            <i class="icon-calendar"></i>
                        </div>
                        <h3 class="text-lg font-bold text-gold mb-2">
                            <%= language === 'ar' ? 'التقويم الاقتصادي' : 'Economic Calendar' %>
                        </h3>
                        <p class="text-gold/70 text-sm mb-4">
                            <%= language === 'ar' ? 'أهم الأحداث الاقتصادية' : 'Important economic events' %>
                        </p>
                        <button onclick="openCalendar()" class="btn btn-sm btn-outline text-gold border-gold">
                            <%= language === 'ar' ? 'عرض' : 'View' %>
                        </button>
                    </div>

                    <!-- Market News -->
                    <div class="tool-card bg-gradient-to-br from-gold/10 to-gold/5 border border-gold/20 rounded-lg p-6 text-center">
                        <div class="tool-icon text-3xl text-gold mb-4">
                            <i class="icon-newspaper"></i>
                        </div>
                        <h3 class="text-lg font-bold text-gold mb-2">
                            <%= language === 'ar' ? 'أخبار الأسواق' : 'Market News' %>
                        </h3>
                        <p class="text-gold/70 text-sm mb-4">
                            <%= language === 'ar' ? 'آخر الأخبار المالية' : 'Latest financial news' %>
                        </p>
                        <button onclick="openNews()" class="btn btn-sm btn-outline text-gold border-gold">
                            <%= language === 'ar' ? 'اقرأ' : 'Read' %>
                        </button>
                    </div>

                    <!-- GPT Assistant -->
                    <div class="tool-card bg-gradient-to-br from-gold/10 to-gold/5 border border-gold/20 rounded-lg p-6 text-center">
                        <div class="tool-icon text-3xl text-gold mb-4">
                            <i class="icon-message-circle"></i>
                        </div>
                        <h3 class="text-lg font-bold text-gold mb-2">
                            <%= language === 'ar' ? 'مساعد GPT' : 'GPT Assistant' %>
                        </h3>
                        <p class="text-gold/70 text-sm mb-4">
                            <%= language === 'ar' ? 'استشارات مالية ذكية' : 'Smart financial advice' %>
                        </p>
                        <button onclick="openAssistant()" class="btn btn-sm btn-outline text-gold border-gold">
                            <%= language === 'ar' ? 'اسأل' : 'Ask' %>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pricing Preview -->
        <div class="pricing-preview p-8">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl font-bold text-gold mb-8">
                    <%= language === 'ar' ? 'خطط الاشتراك' : 'Subscription Plans' %>
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Monthly Plan -->
                    <div class="plan-card bg-gradient-to-br from-gold/10 to-gold/5 border border-gold/20 rounded-lg p-8">
                        <h3 class="text-2xl font-bold text-gold mb-4">
                            <%= language === 'ar' ? 'الاشتراك الشهري' : 'Monthly Plan' %>
                        </h3>
                        <div class="price mb-6">
                            <span class="text-4xl font-bold text-gold">5,000</span>
                            <span class="text-gold/70"> <%= language === 'ar' ? 'ريال/شهر' : 'SAR/month' %></span>
                        </div>
                        <ul class="features text-gold/70 mb-6 space-y-2">
                            <li>• <%= language === 'ar' ? 'وصول كامل لجميع الـ180 تحليل' : 'Full access to all 180 analyses' %></li>
                            <li>• <%= language === 'ar' ? 'تقارير غير محدودة' : 'Unlimited reports' %></li>
                            <li>• <%= language === 'ar' ? 'دعم فني 24/7' : '24/7 technical support' %></li>
                        </ul>
                        <a href="/register?plan=monthly" class="btn btn-primary bg-gold text-black w-full">
                            <%= language === 'ar' ? 'ابدأ الآن' : 'Start Now' %>
                        </a>
                    </div>

                    <!-- Yearly Plan -->
                    <div class="plan-card bg-gradient-to-br from-gold/20 to-gold/10 border border-gold/30 rounded-lg p-8 relative">
                        <div class="popular-badge absolute -top-3 left-1/2 transform -translate-x-1/2 bg-gold text-black px-4 py-1 rounded-full text-sm font-bold">
                            <%= language === 'ar' ? 'الأكثر شعبية' : 'Most Popular' %>
                        </div>
                        <h3 class="text-2xl font-bold text-gold mb-4">
                            <%= language === 'ar' ? 'الاشتراك السنوي' : 'Yearly Plan' %>
                        </h3>
                        <div class="price mb-6">
                            <span class="text-4xl font-bold text-gold">54,000</span>
                            <span class="text-gold/70"> <%= language === 'ar' ? 'ريال/سنة' : 'SAR/year' %></span>
                            <div class="savings text-green-400 text-sm">
                                <%= language === 'ar' ? 'وفر 10% (6,000 ريال)' : 'Save 10% (6,000 SAR)' %>
                            </div>
                        </div>
                        <ul class="features text-gold/70 mb-6 space-y-2">
                            <li>• <%= language === 'ar' ? 'جميع مزايا الاشتراك الشهري' : 'All monthly plan features' %></li>
                            <li>• <%= language === 'ar' ? 'خصم 10%' : '10% discount' %></li>
                            <li>• <%= language === 'ar' ? 'أولوية في الدعم' : 'Priority support' %></li>
                        </ul>
                        <a href="/register?plan=yearly" class="btn btn-primary bg-gold text-black w-full">
                            <%= language === 'ar' ? 'ابدأ الآن' : 'Start Now' %>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Call to Action -->
        <div class="cta-section p-8 bg-gradient-to-r from-gold/10 via-gold/20 to-gold/10 text-center">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-3xl font-bold text-gold mb-4">
                    <%= language === 'ar' ? 'هل أنت مستعد لثورة التحليل المالي؟' : 'Ready for the Financial Analysis Revolution?' %>
                </h2>
                <p class="text-xl text-gold/80 mb-8">
                    <%= language === 'ar' ? 'انضم لآلاف المحللين الماليين الذين يثقون بـ FinClick.AI' : 'Join thousands of financial analysts who trust FinClick.AI' %>
                </p>
                <div class="cta-buttons">
                    <a href="/register" class="btn btn-primary bg-gold text-black mr-4 px-8 py-4 text-lg">
                        <%= language === 'ar' ? 'ابدأ مجاناً الآن' : 'Start Free Now' %>
                    </a>
                    <a href="/contact" class="btn btn-outline text-gold border-gold px-8 py-4 text-lg">
                        <%= language === 'ar' ? 'تواصل معنا' : 'Contact Us' %>
                    </a>
                </div>
            </div>
        </div>
    </main>

    <!-- Modals -->
    <!-- Calculator Modal -->
    <div id="calculatorModal" class="modal hidden fixed inset-0 bg-black/80 flex items-center justify-center z-50">
        <div class="modal-content bg-black border border-gold/20 rounded-lg p-6 max-w-md w-full mx-4">
            <div class="modal-header flex justify-between items-center mb-6">
                <h3 class="text-xl font-bold text-gold">
                    <%= language === 'ar' ? 'الحاسبة المالية' : 'Financial Calculator' %>
                </h3>
                <button onclick="closeModal('calculatorModal')" class="text-gold/70 hover:text-gold text-2xl">&times;</button>
            </div>
            <div class="calculator-content">
                <div class="form-group mb-4">
                    <label class="text-gold">
                        <%= language === 'ar' ? 'الأصول المتداولة' : 'Current Assets' %>
                    </label>
                    <input type="number" id="currentAssets" class="form-input w-full p-3 bg-black border border-gold/20 text-gold rounded">
                </div>
                <div class="form-group mb-4">
                    <label class="text-gold">
                        <%= language === 'ar' ? 'الخصوم المتداولة' : 'Current Liabilities' %>
                    </label>
                    <input type="number" id="currentLiabilities" class="form-input w-full p-3 bg-black border border-gold/20 text-gold rounded">
                </div>
                <button onclick="calculateRatio()" class="btn btn-primary bg-gold text-black w-full">
                    <%= language === 'ar' ? 'احسب نسبة السيولة' : 'Calculate Current Ratio' %>
                </button>
                <div id="calculatorResult" class="mt-4 p-3 bg-gold/10 border border-gold/20 rounded hidden">
                    <p class="text-gold"></p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Guest Dashboard JavaScript
        function openCalculator() {
            document.getElementById('calculatorModal').classList.remove('hidden');
        }

        function openCalendar() {
            // Placeholder for economic calendar
            alert('<%= language === "ar" ? "التقويم الاقتصادي قريباً" : "Economic calendar coming soon" %>');
        }

        function openNews() {
            // Placeholder for market news
            alert('<%= language === "ar" ? "أخبار الأسواق قريباً" : "Market news coming soon" %>');
        }

        function openAssistant() {
            // Placeholder for GPT assistant
            alert('<%= language === "ar" ? "مساعد GPT قريباً" : "GPT assistant coming soon" %>');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.add('hidden');
        }

        function calculateRatio() {
            const currentAssets = parseFloat(document.getElementById('currentAssets').value) || 0;
            const currentLiabilities = parseFloat(document.getElementById('currentLiabilities').value) || 0;

            if (currentLiabilities === 0) {
                alert('<%= language === "ar" ? "الخصوم المتداولة لا يمكن أن تكون صفر" : "Current liabilities cannot be zero" %>');
                return;
            }

            const ratio = currentAssets / currentLiabilities;
            const result = document.getElementById('calculatorResult');

            result.classList.remove('hidden');
            result.querySelector('p').textContent =
                '<%= language === "ar" ? "نسبة السيولة: " : "Current Ratio: " %>' +
                ratio.toFixed(2) +
                (ratio > 2 ?
                    ' - <%= language === "ar" ? "سيولة ممتازة" : "Excellent liquidity" %>' :
                    ratio > 1 ?
                        ' - <%= language === "ar" ? "سيولة جيدة" : "Good liquidity" %>' :
                        ' - <%= language === "ar" ? "سيولة ضعيفة" : "Poor liquidity" %>'
                );
        }

        // Demo video placeholder interaction
        document.querySelector('.demo-video .video-placeholder').addEventListener('click', function() {
            alert('<%= language === "ar" ? "العرض التوضيحي التفاعلي قريباً" : "Interactive demo coming soon" %>');
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
</body>
</html>