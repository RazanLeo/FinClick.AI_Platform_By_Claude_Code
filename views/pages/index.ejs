function openFairPriceCalculator() {
    // Open fair price calculator modal
    Swal.fire({
        title: '<%= language === "ar" ? "حاسبة السعر العادل" : "Fair Price Calculator" %>',
        html: `
            <div class="space-y-4 text-left">
                <div>
                    <label class="block text-sm font-medium mb-2">
                        <%= language === "ar" ? "رمز السهم أو اسم الشركة:" : "Stock Symbol or Company Name:" %>
