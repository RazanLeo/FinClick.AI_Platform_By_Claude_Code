<%- include('../layouts/main') %>

<!-- Header -->
<header class="fixed top-0 left-0 right-0 z-40 bg-black/95 backdrop-blur-sm border-b border-gold/20">
    <div class="container mx-auto px-4">
        <!-- Top Stock Ticker -->
        <div class="border-b border-gold/10 py-2 overflow-hidden">
            <div id="stock-ticker" class="whitespace-nowrap animate-scroll">
                <span class="inline-block mx-8 text-sm">
                    <span class="text-gold font-semibold">TASI:</span>
                    <span id="tasi-price" class="text-green-400">12,458.50</span>
                    <span class="text-green-400 text-xs">+0.85%</span>
                </span>
                <span class="inline-block mx-8 text-sm">
                    <span class="text-gold font-semibold">S&P 500:</span>
                    <span id="sp500-price" class="text-green-400">4,567.23</span>
                    <span class="text-green-400 text-xs">+1.23%</span>
                </span>
                <span class="inline-block mx-8 text-sm">
                    <span class="text-gold font-semibold">NASDAQ:</span>
                    <span id="nasdaq-price" class="text-green-400">14,234.56</span>
                    <span class="text-green-400 text-xs">+2.1%</span>
                </span>
                <span class="inline-block mx-8 text-sm">
                    <span class="text-gold font-semibold">DXY:</span>
                    <span id="dxy-price" class="text-red-400">103.45</span>
                    <span class="text-red-400 text-xs">-0.34%</span>
                </span>
            </div>
        </div>

        <!-- Main Navigation -->
        <nav class="py-4">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="flex items-center space-x-3 <%= language === 'ar' ? 'space-x-reverse' : '' %>">
                    <div class="w-12 h-12 bg-gradient-to-br from-gold to-yellow-400 rounded-full flex items-center justify-center glow-effect">
                        <span class="text-black font-bold text-xl">F</span>
                    </div>
                    <div>
                        <h1 class="text-xl font-bold text-gold">FinClick.AI</h1>
                        <p class="text-xs text-gold/70">
                            <%= language === 'ar' ? 'منصة التحليل المالي الذكية والثورية' : 'Revolutionary Intelligent Financial Analysis Platform' %>
                        </p>
                    </div>
                </div>

                <!-- Search Bar -->
                <div class="hidden md:flex flex-1 max-w-md mx-8">
                    <div class="relative w-full">
                        <input type="text"
                               placeholder="<%= language === 'ar' ? 'ابحث...' : 'Search...' %>"
                               class="w-full px-4 py-2 bg-gray-900/50 border border-gold/30 rounded-full text-gold placeholder-gold/50 focus:outline-none focus:border-gold focus:ring-1 focus:ring-gold">
                        <button class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gold/70 hover:text-gold">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>

                <!-- Language Toggle & Auth Buttons -->
                <div class="flex items-center space-x-4 <%= language === 'ar' ? 'space-x-reverse' : '' %>">
                    <!-- Language Toggle -->
                    <div class="relative">
                        <button class="flex items-center space-x-2 <%= language === 'ar' ? 'space-x-reverse' : '' %> px-3 py-2 rounded-lg bg-gray-900/50 border border-gold/30 hover:border-gold transition-colors">
                            <img src="/images/flags/<%= language === 'ar' ? 'sa' : 'us' %>.png" alt="" class="w-4 h-4">
                            <span class="text-sm font-medium"><%= language === 'ar' ? 'AR' : 'EN' %></span>
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>
                    </div>

                    <!-- Notifications -->
                    <button class="relative p-2 text-gold/70 hover:text-gold transition-colors">
                        <i class="fas fa-bell"></i>
                        <span class="absolute -top-1 -right-1 w-4 h-4 bg-red-500 text-white text-xs rounded-full flex items-center justify-center">3</span>
                    </button>

                    <!-- Auth Buttons -->
                    <% if (user) { %>
                    <div class="flex items-center space-x-3 <%= language === 'ar' ? 'space-x-reverse' : '' %>">
                        <span class="text-sm"><%= language === 'ar' ? 'مرحباً' : 'Welcome' %>, <strong><%= user.firstName %></strong></span>
                        <a href="/dashboard" class="px-4 py-2 bg-gold text-black rounded-lg font-medium hover:bg-yellow-400 transition-colors">
                            <%= language === 'ar' ? 'لوحة التحكم' : 'Dashboard' %>
                        </a>
                        <a href="/logout" class="px-4 py-2 border border-gold/50 text-gold rounded-lg font-medium hover:border-gold hover:bg-gold/10 transition-colors">
                            <%= language === 'ar' ? 'تسجيل خروج' : 'Logout' %>
                        </a>
                    </div>
                    <% } else { %>
                    <div class="flex items-center space-x-3 <%= language === 'ar' ? 'space-x-reverse' : '' %>">
                        <a href="/login" class="px-4 py-2 border border-gold/50 text-gold rounded-lg font-medium hover:border-gold hover:bg-gold/10 transition-colors">
                            <%= language === 'ar' ? 'تسجيل الدخول' : 'Login' %>
                        </a>
                        <a href="/register" class="px-4 py-2 bg-gold text-black rounded-lg font-medium hover:bg-yellow-400 transition-colors pulse-gold">
                            <%= language === 'ar' ? 'إنشاء حساب' : 'Sign Up' %>
                        </a>
                    </div>
                    <% } %>
                </div>

                <!-- Mobile Menu Toggle -->
                <button class="md:hidden text-gold" id="mobile-menu-toggle">
                    <i class="fas fa-bars text-xl"></i>
                </button>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden md:hidden mt-4 p-4 bg-gray-900/95 rounded-lg border border-gold/20">
                <div class="space-y-4">
                    <a href="#features" class="block py-2 text-gold hover:text-yellow-400 transition-colors">
                        <%= language === 'ar' ? 'المميزات' : 'Features' %>
                    </a>
                    <a href="#analysis-types" class="block py-2 text-gold hover:text-yellow-400 transition-colors">
                        <%= language === 'ar' ? 'أنواع التحليل' : 'Analysis Types' %>
                    </a>
                    <a href="#pricing" class="block py-2 text-gold hover:text-yellow-400 transition-colors">
                        <%= language === 'ar' ? 'الأسعار' : 'Pricing' %>
                    </a>
                    <a href="#contact" class="block py-2 text-gold hover:text-yellow-400 transition-colors">
                        <%= language === 'ar' ? 'التواصل' : 'Contact' %>
                    </a>
                </div>
            </div>
        </nav>
    </div>
</header>

<!-- Hero Section -->
