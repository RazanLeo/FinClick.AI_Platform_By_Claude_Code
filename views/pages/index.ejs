function sendMessage() {
    const input = document.getElementById('chat-input');
    const messages = document.getElementById('chat-messages');
    const message = input.value.trim();

    if (message) {
        // Add user message
        const userMsg = document.createElement('div');
        userMsg.className = 'mb-2 p-2 bg-green-100 rounded-lg text-right';
        userMsg.innerHTML = `<strong><%= language === "ar" ? "أنت:" : "You:" %></strong> ${message}`;
        messages.appendChild(userMsg);

        // Add bot response (simulated)
        setTimeout(() => {
            const botMsg = document.createElement('div');
            botMsg.className = 'mb-2 p-2 bg-blue-100 rounded-lg';
            botMsg.innerHTML = `<strong>AI Bot:</strong> <%= language === "ar" ? "شكراً لسؤالك. هذا سؤال ممتاز حول التحليل المالي. لمزيد من التفاصيل، أنصحك بالاشتراك في منصة FinClick.AI للحصول على تحليل شامل ومفصل." : "Thank you for your question. This is an excellent question about financial analysis. For more details, I recommend subscribing to FinClick.AI platform for comprehensive and detailed analysis." %>`;
            messages.appendChild(botMsg);
            messages.scrollTop = messages.scrollHeight;
        }, 1000);

        input.value = '';
        messages.scrollTop = messages.scrollHeight;
    }
}

function calculateFairPrice(data) {
