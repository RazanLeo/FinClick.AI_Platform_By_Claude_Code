<%- include('../layouts/main') %>

<div class="min-h-screen bg-gradient-to-br from-black via-gray-900 to-black py-12">
    <div class="container mx-auto px-4">
        <!-- Header -->
        <div class="text-center mb-12">
            <img src="/public/images/logo.png" alt="FinClick.AI Logo" class="h-16 w-auto mx-auto mb-6">
            <h1 class="text-4xl font-bold text-gold mb-4">
                <%= language === 'ar' ? 'الأسعار والاشتراكات' : 'Pricing & Subscriptions' %>
            </h1>
            <p class="text-xl text-gold/70 max-w-3xl mx-auto mb-8">
                <%= language === 'ar' ?
                    'اختر الخطة المناسبة لك واحصل على أقوى منصة تحليل مالي في العالم بأفضل الأسعار' :
                    'Choose the plan that suits you and get the world\'s most powerful financial analysis platform at the best prices'
                %>
            </p>

        </div>

        <!-- Pricing Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12 max-w-4xl mx-auto">
            <!-- Monthly Plan -->
            <div class="bg-gradient-to-b from-gold/10 to-yellow-800/20 backdrop-blur-sm border-2 border-gold rounded-xl p-8 relative">
                <div class="text-center mb-6">
                    <h3 class="text-2xl font-bold text-gold mb-2">
                        <%= language === 'ar' ? 'الخطة الشهرية' : 'Monthly Plan' %>
                    </h3>
                    <div class="mb-4">
                        <span class="text-4xl font-bold text-gold">5,000</span>
                        <span class="text-gold/60 text-lg"><%= language === 'ar' ? 'ر.س' : 'SAR' %></span>
                        <span class="text-gold/60 text-sm block">
                            <%= language === 'ar' ? '/شهرياً' : '/month' %>
                        </span>
                    </div>
                    <p class="text-gold/70 text-sm">
                        <%= language === 'ar' ? 'للشركات والمؤسسات' : 'For companies & institutions' %>
                    </p>
                </div>

                <ul class="space-y-3 mb-8">
                    <li class="flex items-center">
                        <i class="fas fa-infinity text-gold mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'تحليلات غير محدودة' : 'Unlimited analyses' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-infinity text-gold mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'تقارير غير محدودة' : 'Unlimited reports' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'جميع أنواع التحليل المالي (180 نوع)' : 'All financial analysis types (180 types)' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'تحليل بالذكاء الاصطناعي المتقدم' : 'Advanced AI-powered analysis' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'تقارير PDF/Word/Excel/PowerPoint' : 'PDF/Word/Excel/PowerPoint reports' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'دعم فني متميز' : 'Premium technical support' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'مقارنات معيارية عالمية' : 'Global benchmark comparisons' %></span>
                    </li>
                </ul>

                <button class="w-full px-6 py-3 bg-gradient-to-r from-gold to-yellow-400 text-black font-bold rounded-lg hover:from-yellow-400 hover:to-gold transition-all duration-300 glow-effect">
                    <%= language === 'ar' ? 'اشترك شهرياً' : 'Subscribe Monthly' %>
                </button>
            </div>

            <!-- Annual Plan -->
            <div class="bg-gradient-to-b from-purple-900/20 to-purple-800/20 backdrop-blur-sm border-2 border-purple-500 rounded-xl p-8 relative">
                <!-- Popular Badge -->
                <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                    <span class="px-4 py-1 bg-green-500 text-white text-sm font-bold rounded-full">
                        <%= language === 'ar' ? 'وفر 6000 ر.س' : 'Save 6000 SAR' %>
                    </span>
                </div>

                <div class="text-center mb-6 pt-4">
                    <h3 class="text-2xl font-bold text-purple-400 mb-2">
                        <%= language === 'ar' ? 'الخطة السنوية' : 'Annual Plan' %>
                    </h3>
                    <div class="mb-4">
                        <div class="flex items-center justify-center space-x-2">
                            <span class="text-2xl text-purple-400/60 line-through">60,000</span>
                            <span class="text-4xl font-bold text-purple-400">54,000</span>
                        </div>
                        <span class="text-purple-400/60 text-lg"><%= language === 'ar' ? 'ر.س' : 'SAR' %></span>
                        <span class="text-purple-400/60 text-sm block">
                            <%= language === 'ar' ? '/سنوياً (خصم 10%)' : '/year (10% discount)' %>
                        </span>
                        <span class="text-green-400 text-sm font-medium">
                            <%= language === 'ar' ? 'يعني 4500 ر.س شهرياً فقط!' : 'Only 4500 SAR per month!' %>
                        </span>
                    </div>
                    <p class="text-purple-400/70 text-sm">
                        <%= language === 'ar' ? 'الخيار الأفضل - وفر أكثر!' : 'Best value - save more!' %>
                    </p>
                </div>

                <ul class="space-y-3 mb-8">
                    <li class="flex items-center">
                        <i class="fas fa-infinity text-green-400 mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'تحليلات غير محدودة' : 'Unlimited analyses' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-infinity text-green-400 mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'تقارير غير محدودة' : 'Unlimited reports' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'جميع أنواع التحليل المالي (180 نوع)' : 'All financial analysis types (180 types)' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'تحليل بالذكاء الاصطناعي المتقدم' : 'Advanced AI-powered analysis' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'تقارير PDF/Word/Excel/PowerPoint' : 'PDF/Word/Excel/PowerPoint reports' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'دعم فني متميز على مدار الساعة' : '24/7 premium technical support' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-3"></i>
                        <span class="text-gold/80"><%= language === 'ar' ? 'مقارنات معيارية عالمية' : 'Global benchmark comparisons' %></span>
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-star text-gold mr-3"></i>
                        <span class="text-gold font-medium"><%= language === 'ar' ? 'توفير 6000 ر.س سنوياً!' : 'Save 6000 SAR annually!' %></span>
                    </li>
                </ul>

                <button class="w-full px-6 py-3 bg-gradient-to-r from-purple-500 to-purple-600 text-white rounded-lg hover:from-purple-600 hover:to-purple-700 transition-all duration-300 glow-effect">
                    <%= language === 'ar' ? 'اشترك سنوياً ووفر!' : 'Subscribe Annually & Save!' %>
                </button>
            </div>
        </div>

        <!-- Payment Methods -->
        <div class="text-center mb-12">
            <h3 class="text-2xl font-bold text-gold mb-6">
                <%= language === 'ar' ? 'طرق الدفع المدعومة' : 'Supported Payment Methods' %>
            </h3>
            <div class="flex justify-center items-center space-x-8 flex-wrap gap-4">
                <div class="flex items-center space-x-2 px-4 py-2 bg-gray-900/50 border border-gold/20 rounded-lg">
                    <img src="/images/payments/mada.png" alt="MADA" class="h-8 w-auto">
                    <span class="text-gold">MADA</span>
                </div>
                <div class="flex items-center space-x-2 px-4 py-2 bg-gray-900/50 border border-gold/20 rounded-lg">
                    <img src="/images/payments/visa.png" alt="Visa" class="h-8 w-auto">
                    <span class="text-gold">Visa</span>
                </div>
                <div class="flex items-center space-x-2 px-4 py-2 bg-gray-900/50 border border-gold/20 rounded-lg">
                    <img src="/images/payments/mastercard.png" alt="Mastercard" class="h-8 w-auto">
                    <span class="text-gold">Mastercard</span>
                </div>
                <div class="flex items-center space-x-2 px-4 py-2 bg-gray-900/50 border border-gold/20 rounded-lg">
                    <img src="/images/payments/applepay.png" alt="Apple Pay" class="h-8 w-auto">
                    <span class="text-gold">Apple Pay</span>
                </div>
                <div class="flex items-center space-x-2 px-4 py-2 bg-gray-900/50 border border-gold/20 rounded-lg">
                    <img src="/images/payments/paypal.png" alt="PayPal" class="h-8 w-auto">
                    <span class="text-gold">PayPal</span>
                </div>
            </div>
        </div>

        <!-- FAQ -->
        <div class="max-w-4xl mx-auto">
            <h3 class="text-3xl font-bold text-gold text-center mb-8">
                <%= language === 'ar' ? 'الأسئلة الشائعة' : 'Frequently Asked Questions' %>
            </h3>

            <div class="space-y-4">
                <div class="bg-gray-900/50 backdrop-blur-sm border border-gold/20 rounded-xl overflow-hidden">
                    <button class="w-full px-6 py-4 text-left flex justify-between items-center text-gold hover:bg-gold/10" onclick="toggleFAQ(this)">
                        <span class="font-semibold">
                            <%= language === 'ar' ? 'هل يمكنني تغيير خطتي في أي وقت؟' : 'Can I change my plan at any time?' %>
                        </span>
                        <i class="fas fa-chevron-down transition-transform"></i>
                    </button>
                    <div class="px-6 pb-4 text-gold/80 hidden">
                        <%= language === 'ar' ?
                            'نعم، يمكنك ترقية أو تقليل خطتك في أي وقت. التغييرات ستظهر في دورة الفوترة التالية.' :
                            'Yes, you can upgrade or downgrade your plan at any time. Changes will take effect in the next billing cycle.'
                        %>
                    </div>
                </div>

                <div class="bg-gray-900/50 backdrop-blur-sm border border-gold/20 rounded-xl overflow-hidden">
                    <button class="w-full px-6 py-4 text-left flex justify-between items-center text-gold hover:bg-gold/10" onclick="toggleFAQ(this)">
                        <span class="font-semibold">
                            <%= language === 'ar' ? 'هل هناك ضمان استرداد الأموال؟' : 'Is there a money-back guarantee?' %>
                        </span>
                        <i class="fas fa-chevron-down transition-transform"></i>
                    </button>
                    <div class="px-6 pb-4 text-gold/80 hidden">
                        <%= language === 'ar' ?
                            'نعم، نوفر ضمان استرداد الأموال لمدة 7 أيام من تاريخ الاشتراك الأول.' :
                            'Yes, we offer a 7-day money-back guarantee from your first subscription date.'
                        %>
                    </div>
                </div>

                <div class="bg-gray-900/50 backdrop-blur-sm border border-gold/20 rounded-xl overflow-hidden">
                    <button class="w-full px-6 py-4 text-left flex justify-between items-center text-gold hover:bg-gold/10" onclick="toggleFAQ(this)">
                        <span class="font-semibold">
                            <%= language === 'ar' ? 'ما الفرق بين الخطة الشهرية والسنوية؟' : 'What\'s the difference between monthly and annual plans?' %>
                        </span>
                        <i class="fas fa-chevron-down transition-transform"></i>
                    </button>
                    <div class="px-6 pb-4 text-gold/80 hidden">
                        <%= language === 'ar' ?
                            'الخطة السنوية توفر عليك 33% من التكلفة مقارنة بالخطة الشهرية، بالإضافة لمميزات إضافية.' :
                            'Annual plans save you 33% compared to monthly plans, plus include additional features.'
                        %>
                    </div>
                </div>

                <div class="bg-gray-900/50 backdrop-blur-sm border border-gold/20 rounded-xl overflow-hidden">
                    <button class="w-full px-6 py-4 text-left flex justify-between items-center text-gold hover:bg-gold/10" onclick="toggleFAQ(this)">
                        <span class="font-semibold">
                            <%= language === 'ar' ? 'هل الأسعار شاملة ضريبة القيمة المضافة؟' : 'Are prices inclusive of VAT?' %>
                        </span>
                        <i class="fas fa-chevron-down transition-transform"></i>
                    </button>
                    <div class="px-6 pb-4 text-gold/80 hidden">
                        <%= language === 'ar' ?
                            'نعم، جميع الأسعار المعروضة شاملة ضريبة القيمة المضافة 15% حسب اللوائح السعودية.' :
                            'Yes, all displayed prices include 15% VAT as per Saudi regulations.'
                        %>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA Section -->
        <div class="text-center mt-16">
            <div class="bg-gradient-to-r from-gold/10 to-yellow-400/10 border border-gold/30 rounded-xl p-8 max-w-4xl mx-auto">
                <h3 class="text-2xl font-bold text-gold mb-4">
                    <%= language === 'ar' ? 'جاهز لتحويل عملك؟' : 'Ready to transform your business?' %>
                </h3>
                <p class="text-gold/80 mb-6">
                    <%= language === 'ar' ?
                        'ابدأ رحلتك مع أقوى منصة تحليل مالي في العالم واكتشف الفرق' :
                        'Start your journey with the world\'s most powerful financial analysis platform and discover the difference'
                    %>
                </p>
                <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
                    <a href="/register" class="px-8 py-3 bg-gradient-to-r from-gold to-yellow-400 text-black font-bold rounded-lg hover:from-yellow-400 hover:to-gold transition-all duration-300 glow-effect">
                        <%= language === 'ar' ? 'ابدأ مجاناً الآن' : 'Start Free Now' %>
                    </a>
                    <a href="/contact" class="px-8 py-3 border border-gold text-gold rounded-lg hover:bg-gold hover:text-black transition-all duration-300">
                        <%= language === 'ar' ? 'تحدث مع المبيعات' : 'Talk to Sales' %>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function toggleFAQ(button) {
    const content = button.nextElementSibling;
    const icon = button.querySelector('i');

    if (content.classList.contains('hidden')) {
        content.classList.remove('hidden');
        icon.style.transform = 'rotate(180deg)';
    } else {
        content.classList.add('hidden');
        icon.style.transform = 'rotate(0deg)';
    }
}
</script>